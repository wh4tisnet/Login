<Window x:Class="Test1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="LightGray">
    <Grid>
        <TextBlock Text="User:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="76,137,0,0" FontSize="14" Width="35"/>
        <TextBox Name="UsernameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="189,132,0,0" Width="225" Height="25" />
        <TextBlock Text="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="76,187,0,0" FontSize="14" Width="69" />
        <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="189,182,0,0" Width="225" Height="25" />
        <TextBox Name="VisiblePasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="189,182,0,0" Width="225" Height="25" Visibility="Collapsed"/>
        <Button Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="159,249,0,0" Width="120" Height="46" Click="LoginButton_Click" Foreground="Black" Background="LightBlue"/>
        <CheckBox Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="381,187,0,0" Checked="ShowPassword_Checked" Unchecked="ShowPassword_Unchecked" Width="22"/>
        <Button Content="Password reset" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="299,249,0,0" Width="120" Height="46" Click="ResetButton_Click" Background="pink"/>
    </Grid>
</Window>
